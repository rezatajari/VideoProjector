@page "/Shopping-Cart-Item/Cart"
@using Front.Services
@inject ShoppingCartService CartService
<div class="container mt-4">
    <h2>Your Shopping Cart</h2>

    @if (CartService.Items.Count == 0)
    {
        <div class="alert alert-info">Your cart is empty</div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <!-- List of all cart items with full details -->
                @foreach (var item in CartService.Items)
                {
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-3">
                                <img src="@item.ImageUrl" class="img-fluid rounded-start">
                            </div>
                            <div class="col-md-9">
                                <div class="card-body">
                                    <h5 class="card-title">@item.ProductName</h5>
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <input type="number" value="@item.Quantity" min="1" class="form-control" style="width: 70px;">
                                        </div>
                                        <div>
                                            <span class="fw-bold">@item.TotalPrice.ToString("C")</span>
                                        </div>
                                    </div>
                                    <button class="btn btn-sm btn-outline-danger mt-2">Remove</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Order Summary</h5>
                        <div class="d-flex justify-content-between">
                            <span>Subtotal:</span>
                            <span>@CartService.TotalPrice.ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between mt-2">
                            <span>Shipping:</span>
                            <span>Free</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between fw-bold">
                            <span>Total:</span>
                            <span>@CartService.TotalPrice.ToString("C")</span>
                        </div>
                        <a href="/Checkout" class="btn btn-primary w-100 mt-3">Proceed to Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>