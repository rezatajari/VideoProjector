@page "/Products/Details/{ProductId:int}"


<h3>Product Details</h3>

@if (_isLoading)
{
    <div>
        <p>Loading</p>
    </div>
}
else if (!string.IsNullOrEmpty(_errorMessage))
{
    <div>
        <p>@_errorMessage</p>
    </div>
}
else
{
    <div class="card mb-4 border-0 shadow-sm">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@_model?.ImageUrl"
                     alt="@_model?.Name"
                     class="img-fluid rounded-start w-100"
                     style="object-fit: cover; height: 100%; max-height: 250px;">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">@_model?.Name</h3>
                    <p class="card-text">@_model?.Description</p>
                    <p class="card-text fw-bold text-success">Price: @_model?.Price.ToString("C")</p>
                    <p class="card-text">
                        <span class="badge bg-info text-dark">
                            Stock: @_model?.StockQuantity
                        </span>
                    </p>
                </div>
            </div>
        </div>
    </div>
}

